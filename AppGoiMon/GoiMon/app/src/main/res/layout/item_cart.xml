<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgAnhMonCart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/monmau" />

        <TextView
            android:id="@+id/txtTenMonCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Đá bào mật ong"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imgAnhMonCart"
            app:layout_constraintTop_toTopOf="@+id/imgAnhMonCart" />

<!--        <TextView-->
<!--            android:id="@+id/txtDVTCart"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="4dp"-->
<!--            android:text="Tô"-->
<!--            android:textSize="15sp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="#FF9800"-->
<!--            app:layout_constraintStart_toStartOf="@+id/txtTenMonCart"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/txtTenMonCart" />-->

        <TextView
            android:id="@+id/txtGiaKMCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Giá khuyến mãi"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/background"
            app:layout_constraintStart_toStartOf="@+id/txtTenMonCart"
            app:layout_constraintTop_toBottomOf="@+id/txtTenMonCart" />

        <TextView
            android:id="@+id/txtGiaGocCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="Giá KM"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/txtGiaKMCart"
            app:layout_constraintTop_toTopOf="@+id/txtGiaKMCart" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtGiaKMCart"
            app:layout_constraintTop_toBottomOf="@+id/txtGiaKMCart">

            <ImageView
                android:id="@+id/imgAddCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:background="#ededed"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgSubCart"
                app:layout_constraintStart_toEndOf="@+id/txtSoLuongCart"
                app:layout_constraintTop_toTopOf="@+id/imgSubCart"
                app:srcCompat="@drawable/ic_baseline_add_24" />

            <TextView
                android:id="@+id/txtSoLuongCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:inputType="number"

                android:padding="5dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgSubCart"
                app:layout_constraintStart_toEndOf="@+id/imgSubCart" />

            <ImageView
                android:id="@+id/imgSubCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="#ededed"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_horizontal_rule_24" />

            <ImageView
                android:id="@+id/imgDeleteCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imgAddCart"
                app:srcCompat="@drawable/ic_baseline_delete_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>